<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2>Edit This Lisitng</h2>
                <form method="POST" action="/listings/<%=editListing._id %>?_method=PUT" novalidate
                    class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" value="<%=editListing.title %>" name="listing[title]" class="form-control"
                            id="title" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid Title.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" rows="5" cols="20" class="form-control" id="description"
                            required><%=editListing.description %></textarea>

                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid Description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image " class="form-label">Image URL/Link</label>
                        <input type="text" value="<%=editListing.image %>" name="listing[image]" class="form-control"
                            id="image" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid URL/Link.
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" value="<%=editListing.price %>" name="listing[price]" id="price"
                                class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter valid Price.
                            </div>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" value="<%=editListing.country %>" name="listing[country]"
                                class="form-control" id="country" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter valid Country.
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" value="<%=editListing.location%>" name="listing[location]"
                            class="form-control" id="location" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid Location.
                        </div>

                    </div>
                    <button class="btn btn-success">Submit Edit</button>
                </form>
            </div>
        </div>
    </body>