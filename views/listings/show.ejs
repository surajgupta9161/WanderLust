<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="show-container mt-3">
            <div>
                <h2>Listing Details</h2>
                <div class="card show-card">
                    <img src="<%=list.image %>" class="card-img-top show-img" alt="listing-image">
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=list.title %> <br>
                            </b>
                        <p>
                            <%=list.description %>
                        </p>
                        &#8377 <%=list.price.toLocaleString("en-IN") %> <br>
                            <%=list.location %> <br>
                                <%=list.country %>
                                    </p>
                    </div>
                </div>
                <div class="show-btn mb-3">
                    <a href="/listings/<%= list._id %>/edit" class="btn btn-secondary"> Edit</a>
                    <form method="POST" action="/listings/<%=list._id %>/delete?_method=DELETE">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>

            </div>
        </div>
        <hr>
        <div class="show-container ">
            <h2>Leave a Review</h2>
            <form method="POST" action="/listings/<%=list._id%>/review" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="rating">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea rows="5" cols="60" name="review[comment]" id="comment" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please Add some comment!
                    </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
        <hr>
        <h4>All Reviews</h4>
        <div class="d-flex flex-wrap gap-3">
            <% for(let review of list.reviews){ %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">User</h5>
                        <p class="card-text">
                            <%=review.comment %>
                        </p>
                        <p class="card-text">
                            <%=review.rating %> stars
                        </p>
                        <form method="POST" action="/listings/<%=list.id%>/review/<%=review._id %>?_method=DELETE">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </body>